    "test-ollama": "node scripts/test-ollama.js",
    "test-agent": "node scripts/test-fallback-agent.js",
    "status": "node scripts/check-server.js"
  },
  "keywords": [
    "education",
    "ai",
    "study",
    "learning"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@tensorflow/tfjs-node": "^4.22.0",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mammoth": "^1.6.0",
    "mongodb": "^7.0.0",
    "mongoose": "^9.1.1",
    "multer": "^1.4.5-lts.1",
    "natural": "^8.1.0",
    "pdf-parse": "^1.1.1",
    "pg": "^8.11.3",
    "sharp": "^0.32.6",
    "sqlite3": "^5.1.7",
    "tesseract.js": "^5.0.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  }
